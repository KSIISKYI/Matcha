{% extends 'layouts/base.twig' %}

{% block headers %}
<script defer src="http://localhost:8000/js/form.js"></script>
{% endblock %}

{% block content %}
<div class="container">
    <div class="form">
        <center><h1>Registration</h1></center>

        <form action="{{ url_for('signup-post') }}" method="POST">

            <div class="form_grid">
                <div class="form_option">
                    <label for="user_name"><b>Username</b></label>
                    <input type="text" placeholder="Enter Username" name="username" required value="{{ data.0.username }}"
                    {% if errors.0.username %}
                        style="background-color: #ffdada; border: 2px solid red;">
                        <div class="form_option_error">
                            {% for error in errors.0.username %}
                                <p>{{ error }}</p>
                            {% endfor %}
                        </div>
                    {% else %}
                    >
                    {% endif %}  
                </div>

                {# <div class="form_option">
                    <label for="first_name"><b>Firs Name</b></label>
                    <input type="text" placeholder="Enter Username" name="first_name" required value="{{ data.0.first_name }}"
