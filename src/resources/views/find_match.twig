{% extends 'layouts/base.twig' %}

{% block headers %}
<link rel="stylesheet" type="text/css" href="{{ full_url_for('base_path') }}/css/find_match.css">
<script defer src="{{ full_url_for('base_path') }}/js/modal-match.js"></script>
<script defer src="{{ full_url_for('base_path') }}/js/hammer.min.js"></script>
<script defer src="{{ full_url_for('base_path') }}/js/swipe.js"></script>
{% endblock %}

{% block modal %}
<div class="modal" style="background-color: rgb(0, 0, 0, 0.85);">
    <div class="modal-content">
        <div class="modal_message close" style="background-color: rgb(0, 0, 0, 0);;">
        </div>
    </div>
</div>
{% endblock %}


{% block content %}
<div class="tinder">
    <div class="tinder--status">
        <i class="fa fa-remove"></i>
        <i class="fa fa-heart"></i>
    </div>

    <div class="tinder--cards">              
    </div>

    <div class="tinder--buttons">
        <button id="nope" style="width: 100px"><i class="fa fa-remove"></i></button>
        <button id="open_profile" style="width: 200px; color: grey; font-size: 20px; font-weight: bolder;">Open Profile</button>
        <button id="love" style="width: 100px"><i class="fa fa-heart"></i></button>
    </div>
</div>


{% endblock %}
